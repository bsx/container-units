[Unit]
Description=PostgreSQL
After=docker.service
Requires=docker.service

[Service]
ExecStart=/usr/bin/systemd-docker run --rm --name %n --volume /data/postgres/9.6:/var/lib/postgresql/data --publish 127.0.0.1:5432:5432 postgres:9.6-alpine
Restart=always
RestartSec=10s
Type=notify
NotifyAccess=all
TimeoutStartSec=120
TimeoutStopSec=15

[Install]
WantedBy=multi-user.target
