[Unit]
Description=Redis
After=docker.service
Requires=docker.service

[Service]
ExecStart=/usr/bin/systemd-docker run --rm --name %n --publish 127.0.0.1:6379:6379 redis:4-alpine
Restart=always
RestartSec=10s
Type=notify
NotifyAccess=all
TimeoutStartSec=120
TimeoutStopSec=15

[Install]
WantedBy=multi-user.target
